<%= form_with(model: build, local: true) do |form| %>
  <% if build.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(build.errors.count, "error") %> prohibited this build from being saved:</h2>

      <ul>
      <% build.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name ,"物件名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :rent ,"賃料" %>
    <%= form.number_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address ,"住所" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :age ,"築年数" %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :remark ,"備考" %>
    <%= form.text_area :remark %>
  </div>

  <hr>
  <%= form.fields_for :stations do |f| %>
    <div class="field">
      <%= f.label :station_route, "路線名" %>
      <%= f.text_field :route %>
    </div>
    <div class="field">
      <%= f.label :station_name, "駅名" %>
      <%= f.text_field :age %>
    </div>
    <div class="field">
      <%= f.label :station_time, "徒歩時間" %>
      <%= f.number_field :time %>
    </div>
  <% end %> 

  <div class="actions">
    <%= form.submit "登録" %>
  </div>
<% end %>

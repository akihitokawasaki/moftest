<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr>
        <td><%= build.name %></td>
        <td><%= build.rent %></td>
        <td><%= build.address %></td>
        <td><%= build.age %></td>
        <td><%= build.remark %></td>
        <td><%= link_to "詳細", build %></td>
        <td><%= link_to '編集', edit_build_path(build) %></td>
        <td><%= link_to '削除', build, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "物件を登録する", new_build_path %>
